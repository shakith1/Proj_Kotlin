<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="@string/Title"
            android:layout_width="187dp"
            android:layout_height="36dp"
            android:id="@+id/textView" android:textSize="24sp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="98dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="99dp"/>
    <TextView
            android:text="@string/name"
            android:layout_width="58dp"
            android:layout_height="27dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/txtName"
            android:layout_marginEnd="46dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="27dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/age"
            android:layout_width="59dp"
            android:layout_height="21dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp" app:layout_constraintEnd_toStartOf="@+id/txtAge"
            android:layout_marginEnd="46dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.1"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtName"
            android:hint="John Wick"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="38dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtAge"
            android:hint="45"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView3"/>
    <Button
            android:text="@string/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/txtAge" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="131dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="200dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.108"
            app:layout_constraintVertical_bias="0.7" android:onClick="showNotification"/>
</android.support.constraint.ConstraintLayout>